{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://our.company.com/companyUpdate.schema.json",
    "type": "object",
    "properties": {
      "title": {
        "type": "string",
        "minLength": 3,
        "maxLength": 100
      },
      "salary": {
        "type": "integer",
        "minimum": 0,
        "maximum": 1000000
      },
      "equity": {
        "type": "number",
        "minimum": 0,
        "maximum": 1
      },
      "companyHandle": {
        "type": "string",
        "minLength": 2,
        "maxLength": 100
      }
    },
    "additionalProperties": false,
    "required": ["title", "companyHandle"]
  }
  